<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".LoginActivity">

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:background="@drawable/shape"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/buttonbanner"
        android:layout_width="202dp"
        android:layout_height="119dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/todo"
        tools:ignore="SpeakableTextPresentCheck" />
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back!"
        android:textSize="30sp"
        android:layout_below="@+id/buttonbanner"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="3dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:text="Please login to your account"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"/>

    <EditText

        android:id="@+id/editTextEmail"
        android:layout_width="500dp"
        android:layout_height="55dp"
        android:hint="Email"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingStart="18dp"
        android:layout_below="@id/textViewSubtitle"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="500dp"
        android:layout_height="55dp"
        android:layout_below="@id/editTextEmail"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingStart="18dp"
        android:layout_marginBottom="3dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/background"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/editTextPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:buttonTint="@android:color/darker_gray"
        android:text=""
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPassword"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="245dp"
        android:text="Forgot password ?"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewForgotPassword"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Sign In"
        android:background="@drawable/background"/>

    <LinearLayout
        android:id="@+id/linearLayoutOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSignIn"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <View
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/textViewOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:layout_marginRight="15dp"
            android:text="or"
            android:textSize="17sp"
            android:textColor="@android:color/darker_gray"/>

        <View
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

    <Button
        android:id="@+id/buttonSignInWithGoogle"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutOr"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Sign in with Google"
        android:drawablePadding="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background"/>

    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? "
        android:textColor="#000"
        android:textSize="14sp"
        android:layout_below="@id/buttonSignInWithGoogle"
        android:layout_marginTop="10dp"
        android:layout_marginStart="100dp"/>

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textViewSignUp"
        android:layout_marginStart="-14dp"
        android:layout_toEndOf="@id/textViewSignUp"
        android:background="@android:color/transparent"
        android:text="Sign Up"
        android:textColor="#3F51B5"
        android:textSize="14sp" />


</RelativeLayout>
